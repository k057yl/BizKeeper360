@inject BizKeeper360.Resources.SharedLocalizationService sharedLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BizKeeper360</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BizKeeper360.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BizKeeper360</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex justify-content-end">
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <div class="main-container">
            <!-- LeftPanel -->
            <aside class="custom-sidebar">
                <nav>
                    <ul>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@sharedLocalizer.Buttons["MainMenuHome"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@sharedLocalizer.Buttons["Button.Privacy"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Item" asp-action="Create">@sharedLocalizer.Buttons["MainMenuCreate"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Item" asp-action="UserItems">@sharedLocalizer.Buttons["MainMenuItem"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Item" asp-action="Sales">@sharedLocalizer.Buttons["MainMenuSales"]</a>
                        </li>
                        <!--LanguageButton-->
                        <div class="language-selector">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                @sharedLocalizer.Buttons["Language"]
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <form action="@Url.Action("SetLanguage", "Home")" method="post" class="d-inline">
                                        <input type="hidden" name="culture" value="en-US" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="dropdown-item">English</button>
                                    </form>
                                </li>
                                <li>
                                    <form action="@Url.Action("SetLanguage", "Home")" method="post" class="d-inline">
                                        <input type="hidden" name="culture" value="uk-UA" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="dropdown-item">Українська</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </ul>
                </nav>
            </aside>
        </div>
    </header>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BizKeeper360 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <div class="developer-logo"></div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
